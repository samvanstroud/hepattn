{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "timezone": "UTC",
    "schedule": [
        "before 8am on Tuesday"
    ],
    "packageRules": [
        {
            "description": "Ignore specific packages that should be updated manually",
            "matchPackageNames": [
                "torch",
                "lightning",
                "comet-ml",
                "ruff"
            ],
            "enabled": false
        }
    ],
    "lockFileMaintenance": {
        "enabled": true
    }
}